<main class="container mt-2" style="width: 20%">
    <form action="/diaristas/{{diarista.id}}?_method=Patch" method="POST">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome: </label>
            <input 
                type="text" 
                placeholder="Digite o nome do diarista" 
                name="nome"
                value="{{diarista.nome}}" 
                id="nome" 
                class="form-control" 
            />
        </div>

        <div class="mb-3">
            <label for="endereco" class="form-label">Endereço: </label>
            <input 
                type="text" 
                placeholder="Digite o endereço do diarista" 
                name="endereco" 
                value="{{diarista.endereco}}" 
                id="endereco" 
                class="form-control" 
            />
        </div>

        <div class="mb-3">
            <label for="idade" class="form-label">idade: </label>
            <input 
                type="number" 
                placeholder="Digite a idade do diarista" 
                name="idade" 
                value="{{diarista.idade}}" 
                id="idade" 
                class="form-control" 
            />
        </div>

        <button type="submit" class="btn btn-primary">
            Atualizar
        </button>
    </form>
</main>